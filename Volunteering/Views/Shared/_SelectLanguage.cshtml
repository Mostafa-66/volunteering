@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    var requestCulure = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.NativeName }).ToList();

    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

<div title="@Localizer["Request culture provider:"] @requestCulure?.Provider?.GetType().Name">
    <form id="selectLanguage" method="post" asp-controller="Opportunity" asp-action="SetLanguage"
    asp-route-returnUrl="@returnUrl">
        <select name="culture"
            onchange="this.form.submit();"
            asp-for="@requestCulure.RequestCulture.UICulture.Name"
            asp-items="cultureItems">
        </select>
   </form>
</div>