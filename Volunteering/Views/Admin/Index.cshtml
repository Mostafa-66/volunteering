@model IEnumerable<Opportunity>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">أنشطة التطوع</h2>
        </div>
        <div class="col-6 text-end" style="margin-left:50%; margin-bottom:10px;">
            <a asp-controller="Admin" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; إضافة نشاط جديد
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style=" width:100%">
        <thead>
            <tr>
                <th scope="col">
                    أسم النشاط
                </th>
                <th scope="col">
                    بداية النشاط
                </th>
                <th scope="col">
                    نهاية النشاط
                </th>
                <th scope="col">
                    القسم
                </th>
                <th scope="col">
                    حالة النشر
                </th>
                <th scope="col">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var opp in Model)
            {
                <tr>
                    <td width="10%">
                        @opp.Opp_Name
                    </td>
                    <td width="22%">
                        @opp.Opp_Start
                    </td>
                    <td width="22%">
                        @opp.Opp_End
                    </td>
                    <td width="16%">
                        @opp.Sector.Sec_Name
                    </td>
                    <td width="10%">
                        @if (@opp.Opp_Published == "true")
                        {
                            <h10>منشور</h10>
                        }
                        @if (@opp.Opp_Published == "false")
                        {<h10>غير منشور</h10>}
                    </td>
                    <td>
                        <a asp-controller="Admin" asp-action="Edit" asp-route-Id="@opp.Opp_ID" class="btn btn-success">
                            <span>تعديل</span>
                        </a>
                        &nbsp;
                        <a asp-controller="Admin" asp-action="Delete" asp-route-Id="@opp.Opp_ID" class="btn btn-danger" style="margin-right=100px">
                            <span>حذف</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
